---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 <title>{{ site.title }} - {{ page.tag }}</title>
 <link href="http://perv.cloud{{ page.url }}" rel="self"/>
 <link href="http://perv.cloud/tag/{{ page.tag }}.html"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://perv.cloud/tag/{{ page.tag }}.html</id>
 <author>
   <name>{{ site.blogger }}</name>
 </author>
 {% for post in page.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://perv.cloud{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://perv.cloud{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
</feed>